{
  "name": "@smartbear/mcp",
  "version": "0.10.0",
  "description": "MCP server for interacting SmartBear Products",
  "keywords": [
    "smartbear",
    "mcp",
    "bugsnag",
    "reflect",
    "api-hub",
    "pactflow",
    "zephyr"
  ],
  "homepage": "https://developer.smartbear.com/smartbear-mcp",
  "mcpName": "com.smartbear/smartbear-mcp",
  "repository": {
    "type": "git",
    "url": "git@github.com:SmartBear/smartbear-mcp.git"
  },
  "license": "MIT",
  "type": "module",
  "module": "./src/index.ts",
  "bin": {
    "mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "assets",
    "**/README.md"
  ],
  "config": {
    "mcpServerName": "SmartBear MCP Server"
  },
  "scripts": {
    "build:stdio": "tsc && shx chmod +x dist/*.js",
    "build:http": "smithery build",
    "lint:fix": "biome lint . --fix",
    "format:check": "biome format .",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "coverage:check": "vitest --coverage --reporter=verbose --config vitest.config.coverage.ts",
    "start:http": "node .smithery/index.cjs",
    "start:stdio": "node dist/*.js"
  },
  "dependencies": {
    "@bugsnag/js": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@smithery/sdk": "^1.7.4",
    "node-cache": "^5.1.2",
    "swagger-client": "^3.35.6",
    "zod": "^3",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@smithery/cli": "^1.6.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "globals": "^16.2.0",
    "shx": "^0.3.4",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "vitest-fetch-mock": "^0.4.5"
  }
}
